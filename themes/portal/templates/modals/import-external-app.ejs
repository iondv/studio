<%
const params = {
  items: typeof externalAppTracker !== 'undefined' ? externalAppTracker.getFrontItems() : []
};
%>
<div id="import-external-app-modal" class="modal" role="dialog" aria-hidden="true"
     data-params="<%= JSON.stringify(params) %>">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title l10n">Import external app</h4>
      </div>
      <div class="modal-body">

        <div class="form-alert alert">
          <button type="button" class="close"><span aria-hidden="true">Ã—</span></button>
          <div class="alert-content"></div>
        </div>

        <form class="form form-horizontal">

          <%- partial('./attrs/select', {
            name: 'item',
            label: 'External app',
            items: []
          }) %>

          <%- partial('./attrs/string', {
            name: 'url',
            label: 'Custom URL'
          }) %>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="form-import btn btn-primary l10n">Import</button>
        <button type="button" class="form-cancel btn btn-default l10n">Close</button>
      </div>
    </div>
  </div>
</div>
